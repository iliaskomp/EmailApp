<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/email_text_view_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Subject Title"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/email_image_view_encryption_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/circle_shape_green"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content_description_encryption_status"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/email_text_view_sender"
            tools:text="From: sender@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email_text_view_recipient"
            tools:text="From: recipient@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email_text_view_date"
            tools:text="Date: 12/22/08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="fill_parent"
            android:layout_height="0.4dip"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="#000"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/email_text_view_message"
            tools:text="Content of the emailToSend bla bla bla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="fill_parent"
            android:layout_height="0.4dip"
            android:background="#000" />

        <Button
            android:id="@+id/email_button_headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click for headers"
            android:textColor="#000"
            android:textSize="14sp"
            />

    </LinearLayout>

</ScrollView>